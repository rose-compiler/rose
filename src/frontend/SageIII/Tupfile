include_rules

: ompparser.yy |> bison -d -o %o %f && mv ompparser.hh ompparser.h |> ompparser.cc | ompparser.h
: omplexer.ll  |> flex --stdout %f > %o |> omplexer.cc
: preproc-c.ll |> flex --stdout %f > %o |> preproc-c.cc

