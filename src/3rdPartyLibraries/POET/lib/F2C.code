if (!(tab : MAP)) ERROR("No Symbol Table!");
switch(m=tab[name])
{
case TAG#("PARAM",type): "" 
case TAG#("FUN",type): (type " " name "();\n")
case "": ERROR("No type info for variable:" name);
default: (m " "  name arrDim ";\n")
})@
