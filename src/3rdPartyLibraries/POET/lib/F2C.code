<define REPL (("dsqrt", "sqrt") ("abs", "fabs"))/>
<xform RenameFunctions pars=(inputCode,pos)>
      tab=car(GLOBAL.SymTable); 
      foreach(REPL : (CLEAR from,CLEAR to) : TRUE) {
         cur=tab[from];
         if (cur != "") {
            tab[to] = cur;
            inputCode=REPLACE(from,to,inputCode);
         }
      }
inputCode
</xform>      
<define UNPARSE RenameFunctions/>
