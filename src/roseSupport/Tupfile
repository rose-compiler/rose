include_rules

: $(ROOT)/LicenseInformation/ROSE_BSD_License.txt \
  |> ^ GEN %o^ perl $(ROOT)/scripts/to-c-string.pl <%f >%o \
  |> licenseString.h

run $(librose_compile) Combinatorics.C IncludeDirective.C \
