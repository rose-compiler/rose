+
+    PrologTerm *
+    make_declaration_modifier(const Decl *D) {
+      return new PrologCompTerm("declaration_modifier", 4,
+                                make_list(1, make_default_atom()),
+                                make_type_modifier(D),
+                                make_access_modifier(D),
+                                make_storage_modifier(D));
