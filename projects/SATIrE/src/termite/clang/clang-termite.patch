+    static std::string
+    filter_string(std::string s) {
+      std::stringstream S;
+      for (unsigned int i = 0; i < s.length(); ++i) {
+        unsigned char c = s[i];
+        if(isalnum(c) || c == '_')
+          S << c;
+        else if (c == '.')
+          S << "_dot_";
+      }      
+      return S.str();
+    }
