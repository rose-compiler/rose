+    //called by the driver for the very last file
+    virtual void
+    OnLastFile() {
+      PrologTerm *project = make_project_term();
+      static std::ostream& out = get_output_stream();
+      out << project->getRepresentation() << ".";
+      if (&out != &std::cout && &out != &std::cerr)
+        delete &out;
+    }
